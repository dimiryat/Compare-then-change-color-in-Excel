Sub Mark_Fail()
    Dim rng As Range
    Dim cell As Range
    Dim referenceRowLL As Range
    Dim referenceRowHL As Range
    
    Set rng = ActiveSheet.Range("G19:KS37")
    Set referenceRowLL = ActiveSheet.Range("G16:KS16")
    Set referenceRowHL = ActiveSheet.Range("G17:KS17")
    For Each cell In rng
        If Not IsEmpty(cell.Value) Then
            If cell.Value < Cells(16, cell.Column).Value Then
                cell.Font.Color = RGB(255, 0, 0)
            ElseIf cell.Value > Cells(17, cell.Column).Value Then
                cell.Font.Color = RGB(255, 0, 0)
            Else
                cell.Font.Color = RGB(0, 0, 0)
            End If
        End If
    Next cell
End Sub
